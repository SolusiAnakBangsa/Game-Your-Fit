<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.streak.StreakActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/amber_900"
        android:gravity="center"
        android:text="5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/streakFire"
        app:layout_constraintRight_toLeftOf="@id/streakNumber"/>
    <TextView
        android:id="@+id/streakNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text=" day streak"
        app:layout_constraintBottom_toTopOf="@id/streakFire"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <WebView
        android:id="@+id/streakFire"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/streakFire"
        android:text="You're on fire!"
        />
    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:clickable="true"
        android:focusable="true"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Home"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_right"
        android:drawableTint="?attr/colorPrimary"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
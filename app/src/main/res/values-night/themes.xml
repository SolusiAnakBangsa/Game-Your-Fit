<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameYourFit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_900</item>
        <item name="colorPrimaryVariant">@color/orange_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary color, change if needed, since we only have two theme colors. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->


        <!-- Customize your theme here. -->
    </style>

    <!-- Colors for the drawer, check drawable folder for the colors -->
    <style name="Theme.GameYourFit.NavigationView">
        <item name="itemBackground">@drawable/menu_background_color_night</item>
        <item name="itemIconTint">@drawable/menu_text_color_night</item>
        <item name="itemTextColor">@drawable/menu_text_color_night</item>

    </style>
    <style name="Theme.GameYourFit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.GameYourFit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>